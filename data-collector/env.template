# =============================================================================
# üîó Data Collector Environment Configuration
# =============================================================================
# Copy this file to .env and update the values as needed

# =============================================================================
# ü§ñ OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# üóÑÔ∏è ChromaDB Configuration
# =============================================================================
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION=api_specifications
CHROMADB_PERSIST_DIRECTORY=./data/chroma_db

# =============================================================================
# üîç Data Collection Configuration
# =============================================================================
DATA_COLLECTOR_BATCH_SIZE=10
DATA_COLLECTOR_MAX_RETRIES=3
DATA_COLLECTOR_TIMEOUT=30
DATA_COLLECTOR_RATE_LIMIT=100

# =============================================================================
# üåê Web Search Configuration
# =============================================================================
WEB_SEARCH_ENABLED=true
WEB_SEARCH_TIMEOUT=30
WEB_SEARCH_MAX_RESULTS=10

# =============================================================================
# üîë Optional External API Keys
# =============================================================================
# Google Search API (optional)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Bing Search API (optional)
BING_SEARCH_API_KEY=your_bing_search_api_key_here

# GitHub API (optional)
GITHUB_TOKEN=your_github_token_here

# RapidAPI (optional)
RAPIDAPI_KEY=your_rapidapi_key_here

# =============================================================================
# üìä Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/data_collector.log

# =============================================================================
# üîí Security Configuration
# =============================================================================
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# ‚ö° Performance Configuration
# =============================================================================
MAX_WORKERS=4
CACHE_TTL=3600
MEMORY_LIMIT=2GB

# =============================================================================
# üìÅ File Paths Configuration
# =============================================================================
DATA_DIRECTORY=./data
SAMPLES_DIRECTORY=./samples
LOGS_DIRECTORY=./logs
TEMP_DIRECTORY=./temp

# =============================================================================
# üåç Environment Configuration
# =============================================================================
ENVIRONMENT=development
DEBUG=false
TESTING=false

# =============================================================================
# üîß Advanced Configuration
# =============================================================================
# Custom chunking configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
CHUNKING_STRATEGY=semantic

# Custom categorization
CUSTOM_CATEGORIES_ENABLED=false
CUSTOM_CATEGORIES_FILE=./config/custom_categories.json

# =============================================================================
# üìß Notification Settings
# =============================================================================
NOTIFICATIONS_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=admin@example.com

# =============================================================================
# üîó Integration Settings
# =============================================================================
# API Gateway Integration
API_GATEWAY_URL=https://api-gateway.example.com
API_GATEWAY_KEY=your_api_gateway_key

# Webhook Integration
WEBHOOK_URL=https://webhook.example.com/webhook
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# üéØ Custom Service Configuration (Example)
# =============================================================================
# Example: Adding a new service configuration
CUSTOM_SERVICE_ENABLED=false
CUSTOM_SERVICE_API_KEY=your_custom_service_api_key_here
CUSTOM_SERVICE_ENDPOINT=https://api.customservice.com
CUSTOM_SERVICE_TIMEOUT=30
CUSTOM_SERVICE_RETRY_ATTEMPTS=3
